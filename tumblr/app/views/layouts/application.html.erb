<!DOCTYPE html>
<html>
  <head>
    <title>TumblrRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Raleway:400,700', rel: 'stylesheet' %>
    <%= favicon_link_tag 'favicon.ico' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div id="sidebar">
      <ul>
        <li class="category"><%= link_to "Tumblr", root_path %></li>
        <li><%= link_to "Posts", posts_path %></li>
        <% if Rails.application.routes.named_routes.helper_names.include?("about_path") %>
          <li><%= link_to "About", about_path %></li>
        <% else %>
          <li>About</li>
        <% end %>
      </ul>

      <%# Se vocÃª estiver usando Devise, descomente abaixo %>
      <%# if defined?(user_signed_in?) && user_signed_in? %>
        <%# <p class="sign_in"><%= link_to "Dashboard", dashboard_path %></p> %>
      <%# else %>
        <%# <p class="sign_in"><%= link_to "User Login", new_user_session_path %></p> %>
      <%# end %>
    </div>

    <div id="main_content">
      <div id="header">
        <p>Post Feed</p>
        <div class="buttons">
          <%= link_to "Make Post", new_post_path, class: "button" %>
          <%# Se estiver usando Devise, descomente abaixo %>
          <%# if defined?(user_signed_in?) && user_signed_in? %>
            <%#= button_to "Log Out", destroy_user_session_path, method: :delete, class: "button" %>
          <%# end %>
        </div>
      </div>

      <% flash.each do |name, msg| %>
        <%= content_tag(:div, msg, class: "alert #{name}") %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
